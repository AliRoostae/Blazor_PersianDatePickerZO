@page "/RangeDateManual"
@using Blazor_PersianDatePickerZO.Component
@using Blazor_PersianDatePickerZO.Hellper

<div class="row">
    <div class="col text-center">
       <ZeroOneDatePicker  @bind-SelectDate="@dateFirst"  MaxDate="@dateLast" PupupDatePickerZO="true" ThemePickerZO="ThemeDatePickerZO.darkblue" />
       <hr class="divider">
       <span>Start</span>
       <hr class="divider">
     <ZeroOneDatePicker  @bind-SelectDate="@dateFirst"  MaxDate="@dateLast" ThemePickerZO="ThemeDatePickerZO.darkblue" />
    </div>
    <div class="col text-center">
       <ZeroOneDatePicker @bind-SelectDate="@dateLast"  MinDate="@dateFirst" PupupDatePickerZO="true" ThemePickerZO="ThemeDatePickerZO.darkblue" />
       <hr class="divider">
       <span>End</span>
       <hr class="divider">
     <ZeroOneDatePicker @bind-SelectDate="@dateLast"  MinDate="@dateFirst" ThemePickerZO="ThemeDatePickerZO.darkblue" />
    </div>

   

   
</div>

@code{


    DateTime _dateF = DateTime.Now.AddDays(-5);
    DateTime _dateL = DateTime.Now.AddDays(1);

    DateTime dateFirst
    {
        set => _dateF = value < _dateL ? value : _dateF;
        get => _dateF;

    }
    DateTime dateLast 
    {
        set => _dateL = value > _dateF ? value : _dateL;
        get => _dateL;

    }

  


}